{
  "name": "api",
  "version": "1.0.2",
  "description": "Read-only API for Vexchange data",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test,abi}/**/*.{ts,js}\" --fix",
    "lint:json": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "eslintConfig": {
    "extends": "@proxima-oss/eslint-config"
  },
  "prettier": {
    "singleQuote": false,
    "trailingComma": "all"
  },
  "dependencies": {
    "@nestjs/common": "8.2.3",
    "@nestjs/config": "1.1.5",
    "@nestjs/core": "8.2.3",
    "@nestjs/platform-fastify": "8.2.3",
    "@nestjs/schedule": "1.0.2",
    "@nestjs/swagger": "5.1.5",
    "@vechain/connex": "2.0.7",
    "async-mutex": "0.3.2",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "coingecko-api": "1.0.10",
    "ethers": "5.5.1",
    "fastify-helmet": "5.3.2",
    "fastify-swagger": "4.12.6",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.4.0",
    "vexchange-sdk": "1.1.1"
  },
  "devDependencies": {
    "@nestjs/cli": "8.1.5",
    "@nestjs/schematics": "8.0.5",
    "@nestjs/testing": "8.2.3",
    "@proxima-oss/eslint-config": "4.0.4",
    "@types/jest": "27.0.3",
    "@types/node": "16.11.10",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "5.4.0",
    "@typescript-eslint/eslint-plugin-tslint": "5.4.0",
    "@typescript-eslint/parser": "5.4.0",
    "eslint": "8.3.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-import-newlines": "1.1.5",
    "eslint-plugin-typescript-sort-keys": "2.1.0",
    "eslint-plugin-unicorn": "37.0.1",
    "jest": "27.3.1",
    "prettier": "2.5.0",
    "source-map-support": "0.5.21",
    "supertest": "6.1.6",
    "ts-jest": "27.0.7",
    "ts-loader": "9.2.6",
    "ts-node": "10.4.0",
    "tsconfig-paths": "3.12.0",
    "tslint": "6.1.3",
    "typescript": "4.5.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "@src/(.*)": [
        "<rootDir>/src/$1"
      ],
      "@controllers/(.*)": [
        "<rootDir>/src/controllers/$1"
      ],
      "@services/(.*)": "<rootDir>/src/services/$1",
      "@abi/(.*)": [
        "<rootDir>/abi/$1"
      ],
      "@test/(.*)": [
        "<rootDir>/test/$1"
      ]
    },
    "rootDir": ".",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "testEnvironment": "node"
  }
}
